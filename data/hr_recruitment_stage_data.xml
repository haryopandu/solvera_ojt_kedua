<odoo>
    <data noupdate="1">
        <record id="hr_recruitment_stage_pending" model="hr.recruitment.stage">
            <field name="name">Pending</field>
            <field name="sequence" eval="10"/>
        </record>
        <record id="hr_recruitment_stage_shortlisted" model="hr.recruitment.stage">
            <field name="name">Shortlisted</field>
            <field name="sequence" eval="20"/>
        </record>
        <record id="hr_recruitment_stage_accepted" model="hr.recruitment.stage">
            <field name="name">Accepted</field>
            <field name="sequence" eval="30"/>
        </record>
        <record id="hr_recruitment_stage_rejected" model="hr.recruitment.stage">
            <field name="name">Rejected</field>
            <field name="sequence" eval="40"/>
            <field name="fold" eval="True"/>
        </record>
    </data>
</odoo>